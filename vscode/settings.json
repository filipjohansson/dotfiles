{
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.insertSpaces": false,
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "deepIndent",
    "gitlens.hovers.currentLine.over": "line",
    "files.trimTrailingWhitespace": true,
    // Change the color of the status bar
    "workbench.colorCustomizations": {
        "activityBar.activeBorder": "#608b4e",
        "statusBar.foreground" : "#aaaaaa",
        "statusBar.background" : "#303030",
        "statusBar.noFolderBackground" : "#222225",
        "statusBar.debuggingBackground": "#511f1f",
        "statusBarItem.remoteBackground": "#303030",
        "statusBarItem.remoteForeground": "#aaaaaa",
        "tab.activeBorderTop": "#608b4e"
    },
    "editor.renderControlCharacters": false,
    "problems.showCurrentInStatus": true,
    "workbench.editor.highlightModifiedTabs": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.folders.theme": "none",
    "material-icon-theme.saturation": 0.5,
    "material-icon-theme.activeIconPack": "react",
    "go.useLanguageServer": true,
    "vim.vimrc.enable": true,
    "workbench.editor.wrapTabs": true,
    "workbench.editor.decorations.badges": true,
    "workbench.productIconTheme": "material-product-icons",
    "editor.bracketPairColorization.enabled": true,
    "editor.suggest.preview": true,
    "workbench.tree.renderIndentGuides": "always",
    "editor.guides.bracketPairs": true,
    "javascript.inlayHints.enumMemberValues.enabled": true,
    "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
    "javascript.inlayHints.parameterNames.enabled": "all",
    "javascript.inlayHints.parameterTypes.enabled": true,
    "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
    "typescript.inlayHints.enumMemberValues.enabled": true,
    "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
    "typescript.inlayHints.parameterNames.enabled": "all",
    "typescript.inlayHints.parameterTypes.enabled": true,
    "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
    "typescript.inlayHints.variableTypes.enabled": true,
    "stylelint.validate": [
        "css",
        "less",
        "postcss",
        "scss"
    ],
    "editor.fontFamily": "Monoid, monospace",
    "telemetry.telemetryLevel": "off",
    "workbench.activityBar.location": "top"
}
