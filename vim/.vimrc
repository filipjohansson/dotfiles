colorscheme desert

set autoindent			" Auto-indent new lines
set background=dark		" Use dark background
set backspace=indent,eol,start	" Normal backspace behaviour
set encoding=utf-8		" Set encoding to UTF-8
set formatoptions+=j		" Delete comment characters when joining lines
set hidden			" Enable hidden buffers
set hlsearch			" Highlight all search results
set incsearch			" Searches incrementally
set linebreak			" Break lines at words
set nobackup			" Do not use backup files
set nocompatible		" Not compatible with VI
set number relativenumber	" Enable relative line numbers
set ruler			" Show row and column ruler info
set scrolloff=5			" Add padding to the scrolling
set showcmd			" Show last cmd in statusbar
set showmatch			" Higihlight matching brace
set smartcase			" Enable smart-case when searching
set smartindent			" Enable smart indentation
set visualbell			" Use visual bell instead of sound
set wildmenu			" Enable auto-complete menus
syntax enable			" Enable syntax highlighting

" Keybindings
imap jj <Esc>
